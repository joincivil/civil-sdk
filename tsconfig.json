{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "build/static/js/",
    "declaration": true,
    "declarationDir": "build/static/js/",
    "jsx": "react",
    "typeRoots": ["node_modules/@types"],
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./src/setupTests.ts",
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx"
  ]
}
